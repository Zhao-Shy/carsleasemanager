<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.threemusketeers.carsleasemanager.mapper.UserMapperExtend"  >
    <resultMap id="BaseResultMap" type="user" extends="com.threemusketeers.carsleasemanager.mapper.UserMapper.BaseResultMap"></resultMap>
    <select id="login" resultMap="BaseResultMap" >
        select
            username,
            user_type,
            member_type
        from sys_user
        where username = #{user.username}
        and password = #{user.password}
    </select>

</mapper>